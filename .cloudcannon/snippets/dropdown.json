{
    "snippet": "<details><summary>{`[[label]]`}</summary>[[content]]</details>",
    "inline": false,
    "preview": {
      "text": [   
        {
          "template": "Dropdown: {label}"
        },
        "Dropdown"
      ],
      "subtext": [
        {
          "key": "content"
        }
      ],
      "icon": "segment"
    },
    "_inputs": {
      "content": {
        "type": "markdown"
      },
      "label": {
        "type": "text"
      }
    },
    "params": {
      "label": {
        "parser": "argument",
        "options": {
          "model": 
          {
              "editor_key": "label",
              "type": "string"
          },
          "style": { 
              "output": "inline"
          }
        }
      },
      "content": {
        "parser": "content",
        "options": {
          "editor_key": "content",
          "allow_nested": false
        }
      }
    }
}